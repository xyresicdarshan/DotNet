
@{
    ViewBag.Title = "View";
}
@section HeadContent{
    @Styles.Render("~/Content/Student")
    @Styles.Render("~/Content/css")
}


<div ng-app="studentApp">
    <h2 class="textAR">Material Form CRUD </h2>
    <div ng-controller="ViewCtrl as vm">

        <input id="hdnid" value=" " />

        <md-content layout-padding>
            <form name="projectForm">
                <md-input-container class="md-block textAR">
                    <label>Description</label>
                    <input md-maxlength="30" required md-no-asterisk name="Descripion" ng-model="project.Descripion">
                    <div ng-messages="projectForm.Descripion.$error">
                        <div ng-message="required">This is required.</div>
                        <div ng-message="md-maxlength">The description must be less than 30 characters long.</div>
                    </div>
                </md-input-container>

                <div layout="row">
                    <md-input-container flex="50" class="textAR">
                        <label>Client Name</label>
                        <input required name="ClientName" ng-model="project.ClientName">
                        <div ng-messages="projectForm.ClientName.$error">
                            <div ng-message="required">This is required.</div>
                        </div>
                    </md-input-container>

                    <md-input-container flex="50" class="textAR">
                        <label>Project Type</label>
                        <md-select name="ProjectType" ng-model="project.ProjectType" required>
                            <md-option value="app">Application</md-option>
                            <md-option value="web">Website</md-option>
                        </md-select>
                        <div ng-messages="projectForm.ProjectType.$error">
                            <div ng-message="required">This is required.</div>
                        </div>
                    </md-input-container>
                </div>

                <md-input-container class="md-block textAR">
                    <label>Client Email</label>
                    <input required type="Email" name="Email" ng-model="project.Email"
                           minlength="10" maxlength="100" />

                    <div ng-messages="projectForm.Email.$error" role="alert">
                        <div ng-message-exp="['required', 'minlength', 'maxlength', 'pattern']">
                            Your email must be between 10 and 100 characters long and look like an e-mail address.
                        </div>
                    </div>
                </md-input-container>

                <md-input-container class="md-block textAR">
                    <label>Hourly Rate (USD)</label>
                    <input required type="number" step="any" name="HourlyRate" ng-model="project.HourlyRate" min="800"
                           max="4999" ng-pattern="/^1234$/" />

                    <div ng-messages="projectForm.HourlyRate.$error" multiple md-auto-hide="false">
                        <div ng-message="required">
                            You've got to charge something! You can't just <b>give away</b> a Missile Defense
                            System.
                        </div>

                        <div ng-message="min">
                            You should charge at least $800 an hour. This job is a big deal... if you mess up,
                            everyone dies!
                        </div>

                        <div ng-message="pattern">
                            You should charge exactly $1,234.
                        </div>

                        <div ng-message="max">
                            {{projectForm.rate.$viewValue | currency:"$":0}} an hour? That's a little ridiculous. I
                            doubt even Bill Clinton could afford that.
                        </div>
                    </div>
                </md-input-container>

                <md-input-container class="md-block textAR">
                    <md-checkbox name="iAccept" ng-model="project.iAccept" required>
                        I accept the terms of service.
                    </md-checkbox>
                    <div ng-messages="projectForm.iAccept.$error" multiple md-auto-hide="false">
                        <div ng-message="required">
                            You must accept the terms of service before you can proceed.
                        </div>
                    </div>
                </md-input-container>

                <md-input-container class="md-block textAR">
                    <md-switch class="md-primary" name="enable" ng-model="project.enable" required>
                        Enable special options.
                    </md-switch>
                    <div ng-messages="projectForm.enable.$error" multiple>
                        <div ng-message="required" class="textAR">
                            You must enable all special options before you can proceed.
                        </div>
                    </div>
                </md-input-container>
                <div>
                    <md-button type="submit" class="textAR" ng-click="vm.UpdateInput(data.ClientId)">UPDATE</md-button>
                </div>

                <p style="font-size:.8em; width: 100%; text-align: center;">
                    Make sure to include <a href="https://docs.angularjs.org/api/ngMessages" target="_blank">ngMessages</a> module when using ng-message markup.
                </p>
            </form>
        </md-content>
    </div>
    <md-button type="submit" class="textAR"> <a href="~/Student/List"> Back </a></md-button>
</div>
@Scripts.Render("~/bundles/Common")
@Scripts.Render("~/bundles/Angular")
@Scripts.Render("~/bundles/View")
